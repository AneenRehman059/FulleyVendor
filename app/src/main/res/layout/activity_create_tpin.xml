<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Tpin">

    <RelativeLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/m2"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/tvLedger"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="1"
            android:text="Create Tpin"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/primary"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <View
        android:id="@+id/view_toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_below="@+id/lay2"
        android:layout_height="2dp"
        android:background="@color/primary" />


    <ImageView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:id="@+id/n1"
        android:src="@drawable/n11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_100sdp"
        />

    <com.goodiebag.pinview.Pinview
        android:id="@+id/myPinView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n1"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:cursorVisible="true"
        app:forceKeyboard="true"
        app:inputType="number"
        app:pinHeight="@dimen/_40sdp"
        app:pinLength="4"
        app:pinWidth="@dimen/_40sdp">

    </com.goodiebag.pinview.Pinview>

    <Button
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myPinView"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Verify" />


</RelativeLayout>