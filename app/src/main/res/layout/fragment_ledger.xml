<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ledger_Layout"
    android:orientation="vertical"
    tools:context=".Fragments.LedgerFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <ImageView
                android:id="@+id/m2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tvLedger"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:maxLines="1"
                android:text="Ledger"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/primary"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>

        <View
            android:id="@+id/view_toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        android:id="@+id/main_layout_date"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/from_date_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_from_date"
            android:text="From Date"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_from_date"
                style="@style/style_edittext_no_padding"
                android:background="@drawable/round_corner_background"
                android:hint="From Date"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorText"
                android:textColorHint="@color/DarkGray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:id="@+id/to_date_layout"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_to_date"
                android:layout_marginStart="2dp"
                android:text="To Date"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_to_date"
                style="@style/style_edittext_no_padding"
                android:background="@drawable/round_corner_background"
                android:hint="To Date"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorText"
                android:textColorHint="@color/DarkGray"/>
        </LinearLayout>


    </LinearLayout>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/rv_ledger"/>-->

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/primary"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
          android:id="@+id/txt_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/_10sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:text="Date"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/txt_c_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/txt_date"
          android:layout_marginLeft="@dimen/_10sdp"
          android:text="Company  Name"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/txt_p_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txt_c_name"
          android:layout_marginLeft="@dimen/_10sdp"
          android:text="Pump Name"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/txt_quantity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txt_p_name"
          android:layout_marginLeft="@dimen/_10sdp"
          android:text="Quantity"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />


      <TextView
          android:id="@+id/date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/_110sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_toRightOf="@+id/txt_date"
          android:text="8-6-2022"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/company_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/date"
          android:layout_marginLeft="@dimen/_110sdp"
          android:layout_toRightOf="@+id/txt_date"
          android:text="Sabrosso Ltd"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/pump_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/company_name"
          android:layout_marginLeft="@dimen/_110sdp"
          android:layout_toRightOf="@+id/txt_date"
          android:text="At PSO Gulberg"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />


      <TextView
          android:id="@+id/quantity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/pump_name"
          android:layout_marginLeft="@dimen/_110sdp"
          android:layout_toRightOf="@+id/txt_date"
          android:text="20 Ltrs"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/quantity"
          android:layout_marginLeft="@dimen/_200sdp"
          android:layout_toRightOf="@+id/txt_date"
          android:text="Rs,20000"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <LinearLayout
          android:id="@+id/la1"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@id/amount"
          android:layout_marginTop="@dimen/_5sdp"
          android:background="@color/primary"
          android:orientation="horizontal" />

<!--      /////////////////////////////////////////////////////-->

      <TextView
          android:id="@+id/txt_date1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/la1"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginLeft="@dimen/_10sdp"
          android:text="Date"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/txt_date1"
          android:id="@+id/txt_c_name1"
          android:text="Company  Name"
          android:textSize="@dimen/_12sdp"
          android:textColor="@color/black"
          android:layout_marginLeft="@dimen/_10sdp"/>

      <TextView
          android:id="@+id/txt_p_name1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txt_c_name1"
          android:layout_marginLeft="@dimen/_10sdp"
          android:text="Pump Name"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/txt_quantity1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txt_p_name1"
          android:layout_marginLeft="@dimen/_10sdp"
          android:text="Quantity"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/date1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/la1"
          android:layout_marginLeft="@dimen/_110sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_toRightOf="@+id/txt_date"
          android:text="10-6-2022"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/date1"
          android:layout_toRightOf="@+id/txt_date"
          android:id="@+id/company_name1"
          android:text="Dewan Foods"
          android:textSize="@dimen/_12sdp"
          android:textColor="@color/black"
          android:layout_marginLeft="@dimen/_110sdp"/>

      <TextView
          android:id="@+id/pump_name1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/company_name1"
          android:layout_marginLeft="@dimen/_110sdp"
          android:layout_toRightOf="@+id/txt_date"
          android:text="At PSO Gulberg"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />


      <TextView
          android:id="@+id/quantity1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/pump_name1"
          android:layout_marginLeft="@dimen/_110sdp"
          android:layout_toRightOf="@+id/txt_date"
          android:text="20 Ltrs"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <TextView
          android:id="@+id/amount1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/quantity1"
          android:layout_marginLeft="@dimen/_200sdp"
          android:layout_toRightOf="@+id/txt_date"
          android:text="Rs,37000"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_2sdp"
          android:background="@color/primary"
          android:layout_below="@id/amount1"
          android:layout_marginTop="@dimen/_5sdp"/>


  </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>