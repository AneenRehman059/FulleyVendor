<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_edittext_no_padding">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/colorgray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>

    <style name="roundimageview">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
        <item name="color">@color/primary</item>
    </style>


    <style name="style_button_secondary">
        <item name="android:background">@drawable/button_style_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

</resources>